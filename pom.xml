<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>leetcode-hub-java</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>leetcode-01</module>
        <module>leetcode-02</module>
        <module>leetcode-03</module>
        <module>leetcode-04</module>
        <module>leetcode-05</module>
        <module>leetcode-06</module>
        <module>leetcode-07</module>
        <module>leetcode-08</module>
        <module>leetcode-09</module>
        <module>leetcode-10</module>
        <module>leetcode-11</module>
        <module>leetcode-12</module>
        <module>leetcode-13</module>
        <module>leetcode-14</module>
        <module>leetcode-15</module>
        <module>leetcode-16</module>
        <module>leetcode-17</module>
        <module>leetcode-18</module>
        <module>leetcode-19</module>
        <module>leetcode-20</module>
    </modules>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <!-- https://junit.org/junit5/docs/current/user-guide/#migrating-from-junit4 -->
    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.7.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <version>5.7.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.2</version>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.22.2</version>
            </plugin>
        </plugins>
    </build>

</project>